<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"

    android:id="@+id/parent_layout"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />


    <!--    <ImageView-->
    <!--        android:layout_width="400dp"-->
    <!--        android:layout_height="200dp"-->
    <!--        android:id="@+id/image"-->
    <!--        android:src="@mipmap/ic_launcher"/>-->


    <TextView
        android:id="@+id/bakkernaam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="62dp"
        android:text="Voornaam Achternaam"
        android:textSize="24sp"
        android:textStyle="bold">

    </TextView>

    <TextView
        android:id="@+id/functie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bakkernaam"
        android:layout_marginLeft="15dp"
        android:paddingTop="5dp"
        android:text="Functienaam"
        android:textSize="18sp">

    </TextView>

    <WebView
        android:id="@+id/bakker_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/functie"
        android:layout_marginLeft="15dp"
        android:paddingTop="10dp"
        android:paddingBottom="15dp"
        android:text="informatie">

    </WebView>


    <ImageView
        android:id="@+id/image2"
        android:layout_width="350dp"
        android:layout_height="250dp"
        android:layout_below="@id/project_info"
        android:layout_gravity="center"
        android:layout_marginTop="-3dp"
        android:layout_marginBottom="-2dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY">

    </ImageView>

